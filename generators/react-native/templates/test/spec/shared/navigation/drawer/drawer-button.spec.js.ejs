import 'react-native';
import React from 'react';
import { fireEvent, render, screen } from '@testing-library/react-native';
import renderer from 'react-test-renderer';

import DrawerButton from '../../../../../app/navigation/drawer/drawer-button'

test('DrawerButton component renders correctly', () => {
  const tree = renderer.create(<DrawerButton onPress={() => {}} text="hi" />).toJSON();
  expect(tree).toMatchSnapshot();
});

test('onPress', () => {
  let i = 0;
  const onPress = () => i++;
  render(<DrawerButton onPress={onPress} text="hi" />);

  expect(i).toBe(0);
  fireEvent.press(screen.getByText('HI'));
  expect(i).toBe(1);
});
